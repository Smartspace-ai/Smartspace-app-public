{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],

      "@/components/*": ["./src/components/*"],
      "@/contexts/*": ["./src/contexts/*"],

      "@/hooks": ["./src/hooks/index.ts"],
      "@/hooks/*": ["./src/hooks/*"],

      "@/hooks/data": ["./src/hooks/data/index.ts"],
      "@/hooks/data/*": ["./src/hooks/data/*"],

      "@/hooks/auth": ["./src/hooks/auth/index.ts"],
      "@/hooks/auth/*": ["./src/hooks/auth/*"],

      "@/hooks/signalr": ["./src/hooks/signalr/index.ts"],
      "@/hooks/signalr/*": ["./src/hooks/signalr/*"],

      "@/apis": ["./src/apis/index.ts"],
      "@/apis/*": ["./src/apis/*"],

      "@/utils": ["./src/utils/index.ts"],
      "@/utils/*": ["./src/utils/*"],

      "@/models": ["./src/models/index.ts"],
      "@/models/*": ["./src/models/*"]
    },
    "composite": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vite/client", "vitest"]
  },
  "files": [],
  "include": ["./src"],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "compileOnSave": false,
  "exclude": ["node_modules", "tmp"]
}
